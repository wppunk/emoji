{
  "name": "plugin-name",
  "version": "{VERSION}",
  "repository": "{URL}",
  "author": "{AUTHOR} <{AUTHOR_URL}>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@symfony/webpack-encore": "^0.30.2",
    "autoprefixer": "^9.8.6",
    "babel-preset-env": "^1.7.0",
    "encore": "^0.0.30-beta",
    "eslint": "^7.7.0",
    "eslint-config-wordpress": "^2.0.0",
    "eslint-loader": "^4.0.2",
    "handlebars": "^4.3.0",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "jest-fetch-mock": "^3.0.3",
    "node-sass": "^4.14.1",
    "pkg": "^4.4.9",
    "postcss-loader": "^3.0.0",
    "postcss-simple-vars": "^5.0.2",
    "sass-loader": "^10.0.2",
    "uglify-js": "^2.6.0",
    "webpack-notifier": "^1.8.0"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not dead"
  ],
  "husky": {
    "hooks": {
      "pre-push": "yarn cs"
    }
  },
  "jest": {
    "automock": false,
    "verbose": true,
    "testURL": "http://domain.tld/",
    "setupFiles": [
      "<rootDir>/.tests/js/setupTests.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "\\.[tj]sx?$": [
        "babel-jest",
        {
          "presets": [
            [
              "babel-preset-env",
              {
                "targets": {
                  "node": 10
                }
              }
            ]
          ]
        }
      ]
    }
  },
  "scripts": {
    "cs": "eslint assets/.src/js/**/*.js",
    "build": "encore production --config='.webpack.config.js'",
    "dev": "encore dev --config='.webpack.config.js'",
    "dev-watch": "encore dev --watch --config='.webpack.config.js'",
    "unit": "jest"
  }
}
